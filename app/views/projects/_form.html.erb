<div class="container">
  <%= form_for @project do |f| %>
    <p>
      <%= f.label "Title:" %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label "Description:" %>
      <%= f.text_area :description %>
    </p>


    <p>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </p>

    <%= f.submit %>
  <% end %>
</div>
